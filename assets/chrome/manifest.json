{
  "name": "Signr",
  "version": "%VERSION%",
  "description": "Push your content through your employees email signatures",
  "content_scripts": [
    {
      "matches": ["https://staging.signr.io/*", "https://signr.io/*", "http://localhost:4200/*"],
      "js": ["app/signr.js"]
    },
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["app/signr-gmail.js"]
    },
    {
      "matches": ["https://inbox.google.com/*"],
      "js": ["app/signr-inbox.js"]
    }
  ],
  "permissions": [
    "https://signr.io/*",
    "https://staging.signr.io/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "manifest_version": 2
}
