{
  "name": "Signr",
  "version": "%VERSION%",
  "description": "Push your content through your employees email signatures",
  "background": {
    "scripts": ["app/signr-chrome-background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "http://www.staging.signr.io/*",
        "http://www.signr.io/*"
      ],
      "js": ["app/signr.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["app/signr-gmail.js"]
    },
    {
      "matches": ["https://inbox.google.com/*"],
      "js": ["app/signr-inbox.js"]
    }
  ],
  "permissions": [
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "https://mail.google.com/*",
    "https://inbox.google.com/*",
    "https://signr.io/*",
    "https://staging.signr.io/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "manifest_version": 2
}
